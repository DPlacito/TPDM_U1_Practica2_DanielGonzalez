<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recuperar Datos "
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#F44336"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <RadioButton
            android:id="@+id/rb_Archivo1_AC3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivo 1"
            android:layout_gravity="center"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rb_Archivo2_AC3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivo 2"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rb_Archivo3_AC3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivo 3"
            android:textSize="20dp" />

    </RadioGroup>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">


    </GridLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:text="Exportar a XLS"
        />
</LinearLayout>